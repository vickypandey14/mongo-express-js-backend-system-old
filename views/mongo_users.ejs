<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>

    <%  if(users.length>0){  %>

    <table border="1" width="50%" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
           
            <% users.forEach( (item)=>{ %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.password %></td>
                <td>
                    <a class="btn btn-primary" href="/edit_user/<%=item._id%>">Edit</a>
                    <a class="btn btn-danger" href="/delete_user/<%=item._id%>" onclick="return confirm('Are you sure you want to delete this record.')">Delete</a>
                </td>
            </tr>
           <% } ) %>
        </tbody>
    </table>

    <% }
    
    else{ %>
        <h2>There is no records</h2>
    <% } %>
    
</body>
</html>